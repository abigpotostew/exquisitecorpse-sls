<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Exquisite Corpse v0.2</title>
    <style>
        .hideFully {
            visibility: hidden;
            display: none;
        }
        canvas {
            border-style: solid;
        }
        body {
            background-color: white;
        }
    </style>

</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="/">Exquisite Corpse</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/">New<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/gallery">Gallery<span class="sr-only">()</span></a>
            </li>

        </ul>



        <form class="form-inline" id="usernameContainer">
            <div class="input-group">
                <div class="input-group-prepend">
                    <button id="openEnterUsernameModal" type="button" class="btn btn-secondary" data-toggle="modal" data-target="#enterUsernameModal">@</button>
                </div>
                <input id="usernameValueContainer" type="text" class="form-control" disabled aria-label="Text container for username" placeholder="Enter username">
            </div>
        </form>


    </div>
</nav>

<ul class="nav navbar-light mb-3 pt-3 pb-3" style="background-color: #e3f2fd;">
    <li class="nav-item">
        <form class="form-inline">
            <span class="nav-link">Controls</span>
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-secondary active">
                    <input type="radio" name="drawMode" id="drawModeDraw" checked value="Draw">Draw
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="drawMode" id="drawModeErase" value="Erase">Erase
                </label>
            </div>
        </form>
    </li>
    <li class="nav-item">
        <form class="form-inline ml-3">
            <span class="nav-link">Share</span>
            <div class="input-group">
                <div class="input-group-prepend">
                    <button type="button" class="btn btn-success btn-secondary" id="copyShareUrlBtn">Save
                    </button>
                </div>
                <input type="text" id="shareUrl" class="form-control"  aria-label="Share URL" placeholder="">
                <div class="input-group-append">
                    <button id="shareUrlCopyBtn" class="btn btn-secondary" type="button" data-clipboard-target="#shareUrl">Copy</button>
                </div>
            </div>
        </form>
    </li>
</ul>


<!-- <h1><a href="/">Exquisite Corpse</a></h1> -->
<div class="container-fluid">
    <!-- Content here -->
    <div class="row" id="instructionsContainer">
        <div class="col-8">

            <div id="instructions">
                <h5>Instructions</h5>
                <p id="stageInstructions">Enter your username by clicking the Set Username button.</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8">

            <div id="gallery-pagination">

                {{if .IsTruncated}}
                    <nav aria-label="Gallery navigation">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" href="/gallery?q={{.GalleryNextToken}}">Next</a>
                            </li>
                        </ul>
                    </nav>
                {{else}}  {{end}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col" id="sketchContainer" style="min-width: 800px"></div>
    </div>
</div>

<div class="modal fade" id="enterUsernameModal" tabindex="-1" role="dialog"
     aria-labelledby="enterUsernameModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="enterUsernameModalLabel">Enter Username</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                                            <span class="input-group-text"
                                                  id="inputGroup-username-label">Username</span>
                    </div>
                    <input id="usernameEnteredText" type="text" class="form-control"
                           aria-label="Username" aria-describedby="inputGroup-username-label">
                </div>

            </div>
            <div class="modal-footer">

                <button id="saveSetUsernameBtn" type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>


{{range .Segments}}
    <img class="hideFully imageDataLoader" src="{{.ContentSrc}}" id="imageDataLoader{{.Id}}" data-id="{{.Id}}" data-order="{{.Order}}" data-creator="{{.Creator}}">
{{end}}

<script src="/static/lib/jquery/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/p5@1.0.0/lib/p5.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
        crossorigin="anonymous"></script>
<script src="/static/lib/underscore/underscore-min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/clipboard@2.0.6/dist/clipboard.min.js"></script>
<script src="/static/app.js"></script>

</body>
</html>